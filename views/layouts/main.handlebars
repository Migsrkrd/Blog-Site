<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Site</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <header>
    <h1>Welcome to the Blog Site {{#if accountName}}{{accountName}}{{/if}}!</h1>
  </header>
  <nav class="navbar">
    <a href="/">Home</a>
    {{#if accountName}}
    <button id="logout">Logout</button>
    <a href="/dashboard">Dashbooard</a>
    {{else}}
    <a href="/login">Login</a>
    {{/if}}
    {{#if addCreate}}
    <a href="/create/new/blogpost">Create</a>
    {{/if}}
  </nav>
  <main>
    <div class="gallery">
      {{{body}}}
    </div>
  </main>
  {{#if accountName}}
  <script src="/js/logout.js"></script>
  {{/if}}
  {{#if commentsLoaded}}
  <script src="/js/comment.js"></script>
  {{/if}}
  {{#if loginPage}}
  <script src="/js/login.js"></script>
  {{/if}}
  {{#if signupPage}}
  <script src="/js/signup.js"></script>
  {{/if}}
  {{#if newBlog}}
  <script src="/js/create.js"></script>
  {{/if}}
  {{#if updatePage}}
  <script src="/js/updatePost.js"></script>
  {{/if}}
  {{#if deleteActive}}
  <script src="/js/delete.js"></script>
  {{/if}}
</body>

</html>