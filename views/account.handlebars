<div class="singlepost">
    <div class="single">
        <h2 class="blogHeader">{{blog.title}}</h2>
        <div class="info">
            <p class="blogAuthor">Written by {{blog.User.user_name}}</p>
            <p class="date">Posted on {{format_date blog.blog_date}}</p>
        </div>
    </div>
    <a href="/{{blog.title}}/comment">
        <button class="commentbtn">Comment</button>
    </a>
    <p class="singlecontent">{{blog.content}}</p>
    <div class="comment-section">
        <h3>Comments</h3>
        <ul>
            {{#if blog.Comments}}
            {{#each blog.Comments}}
            <div class="comments">
                <div class="comment-calls">
                    <h3>{{user_name}}</h3>
                    <h4> Posted on {{ format_date comment_date}}:</h4>
                </div>
                <div class="comment-content">
                    <h3>{{comment}}</h3>
                </div>
            </div>

            {{/each}}
            {{/if}}
        </ul>
    </div>
</div>